@model MovieDto

@{
    ViewData["Title"] = BasicRes.Delete;
}

<h1>@BasicRes.Delete</h1>

<h3>@BasicRes.DeleteMessage</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @BasicRes.Genre
        </dt>
        <dd class = "col-sm-10">
            @Model.GenreName
        </dd>
        <dt class = "col-sm-2">
            @BasicRes.MediumType
        </dt>
        <dd class = "col-sm-10">
            @Model.MediumTypeName
        </dd>
        <dt class = "col-sm-2">
            @BasicRes.Title
        </dt>
        <dd class = "col-sm-10">
            @Model.Title
        </dd>
        <dt class = "col-sm-2">
            @BasicRes.Price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @BasicRes.ReleaseDate
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @BasicRes.Rating
        </dt>
        <dd class = "col-sm-10">
            @Model.LocalizedRating
        </dd>
    </dl>
    
    <form action="Delete" method="post">
        <input type="hidden" value="@Model.Id" name="Id" />        
        @Html.AntiForgeryToken()
        <input type="submit" value="@BasicRes.Delete" class="btn btn-danger" /> |
        <a href="Index">@BasicRes.BackToList</a>
    </form>
</div>
