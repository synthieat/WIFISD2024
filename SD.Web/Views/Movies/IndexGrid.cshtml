@using GridCore
@addTagHelper *, GridMvc
@{
    ViewBag.Title = "Index-Grid";
}
@model ISGrid

<environment names="Development">
    <link href="~/css/gridmvc.css" rel="stylesheet" type="text/css" />
</environment>
<environment names="Staging.Production">
    <link href="~/css/gridmvc.min.css" rel="stylesheet" type="text/css" />
</environment>


<div class="row">
    <div class="col-md-12">
        <p>
            This page demonstrates the possibilities of GridMvcCore. For more documentation, please
            see: <a href="https://github.com/gustavnavar/Grid.Blazor">https://github.com/gustavnavar/Grid.Blazor</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <grid model="@Model" />
    </div>
</div>


@section Scripts {
    <script src="~/js/application/gridmvc.js" ></script>
}